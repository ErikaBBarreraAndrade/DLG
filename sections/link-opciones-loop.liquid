{{ "section-link-opciones-loop.scss.css" | asset_url | stylesheet_tag }}
<style>
	.section-link-opciones-loop{
      background: {{ section.settings.bg_block }};
	}
</style>
<div class="container-fluid">
	<div class="row justify-content-center content-option-loop">
		<div class="col-11 col-sm-11 col-lg-12">
			<div class="row box-opciones-description">
				{% for block in section.blocks %}
				{% if section.blocks.size == 5 and forloop.index < 3 %}
				{% endif %}
						<div class="col-6 col-sm-6 col-lg-6 content-description">
							<div class="d-block d-lg-flex">
								<a href="{{ block.settings.title_url }}">
								<div class="flex-shrink-0">
									{% if block.settings.image != blank %}
										<img class="img-fluid w-100 lazyload"
										     data-src="{{ block.settings.image | img_url:"master"}}"
										     data-aspectratio="{{ preview_image.aspect_ratio }}"
										     width="{{ block.settings.image.width }}"
										     height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round }}"
										     alt="{{ preview_image.alt | escape }}">
									{% endif %}
								</div>
								<div class="flex-grow-1 ms-lg-3 mt-auto">
									{% if block.settings.title_url != blank %}
										<div class="content-title">
											<a href="{{ block.settings.title_url }}">
												<p class="title mb-0">
													{{ block.settings.title }}
													<span class="content-arrow float-end mt-auto">
