<div class="container-fluid">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-10 content-card-motos">
			<div class="row">
				<div class="col-12">
					{% if section.settings.title != blank%}
						<p class="title text-center mb-0">
							{{ section.settings.title }}
						</p>
					{% endif %}
					{% if section.settings.subtitle != blank%}
						<p class="subtitle text-center mb-0">
							{{ section.settings.subtitle }}
						</p>
					{% endif %}
					{% if section.settings.description != blank%}
						<div class="description text-center">
							{{ section.settings.description }}
						</div>
					{% endif %}
				</div>
			</div>
			{% for block in section.blocks %}
			<div class="row box-motos-description" style="background: {{ block.settings.bg_block }}; color: {{ block.settings.color_txt }}">
				<div class="col-12 col-lg-6 content-description my-lg-auto">
					<div class="row">
						<div class="col-12">
							{% if block.settings.title != blank%}
								<p class="title">
									{{ block.settings.title }}
								</p>
							{% endif %}
							{% if block.settings.description != blank%}
								<div class="description-motos">
									{{ block.settings.description }}
								</div>
							{% endif %}
						</div>
					</div>
					<div class="row content-details-motos">
						<div class="col-12 col-lg-12">
							<div class="row">
								{% if block.settings.description_label != blank%}
									<div class="col-6 col-sm-6 col-lg-6">
										<p class="label mb-0">
											Tipo de motor
										</p>
										<p class="description-label">
											{{ block.settings.description_label }}
										</p>
									</div>
								{% endif %}
								{% if block.settings.description_label_motor != blank%}
									<div class="col-6 col-sm-6 col-lg-6">
										<p class="label mb-0">
											Potencia máxima del motor
										</p>
										<p class="description-label">
											{{ block.settings.description_label_motor }}
										</p>
									</div>
								{% endif %}
								{% if block.settings.description_label_total != blank%}
									<div class="col-6 col-sm-6 col-lg-6">
										<p class="label mb-0">
											Desplazamiento total del motor
										</p>
										<p class="description-label">
											{{ block.settings.description_label_total }}
										</p>
									</div>
								{% endif %}
								{% if block.settings.description_label_par != blank%}
									<div class="col-6 col-sm-6 col-lg-6">
										<p class="label mb-0">
											Par máximo del motor
										</p>
										<p class="description-label">
											{{ block.settings.description_label_par }}
										</p>
									</div>
								{% endif %}
							</div>
						</div>
					</div>
						<ul class="d-block d-lg-flex list-unstyled m-0 p-0">
							{% if block.settings.price != blank%}
							<li class="price my-auto">
								{{ block.settings.price }}
							</li>
							{% endif %}
							{% if block.settings.button_link != blank%}
								<li class="content-button my-auto">
									<a href="{{ block.settings.button_link }}" {% if block.settings.enable_target %}target="_blank" {% endif %} class="btn text-uppercase">
										{{ block.settings.button_label }}
									</a>
								</li>
							{% endif %}
						</ul>
				</div>
				{% if block.settings.image != blank%}
					<div class="col-12 col-lg-6 content-image my-lg-auto">
						{{ block.settings.image | img_url: 'master' | img_tag: 'motos seminuevas','img-fluid w-100' }}
					</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>
</div>
