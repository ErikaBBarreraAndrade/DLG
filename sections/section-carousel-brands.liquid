{{ 'section-slider-brands.scss.css' | asset_url | stylesheet_tag }}
<div class="container-fluid">
  <div class="row justify-content-center content-slider-home-text" style="background: {{section.settings.bg_color}}">
    <div class="col-12 text-center">
      {%- if section.settings.heading != blank -%}
      <p class="heading text-uppercase">
        {{section.settings.heading}}
      </p>
      {%- endif -%}
    </div>
    <div class="col-12 col-lg-11">
      <div class="slider-brands-home">
        {%- for block in section.blocks -%}
        <div>
          {%- if block.settings.url != blank -%}
          <a href="{{ block.settings.url }}" target="_blank">
            <img class="lazyload img-fluid"
                 data-src="{{ block.settings.image | img_url:"master" }}"
                 width="{{ block.settings.image.width }}"
                 height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round }}"
                 alt="{{ block.settings.image.alt }}">
          </a>
          {%- else -%}
          <img class="lazyload img-fluid"
               data-src="{{ block.settings.image | img_url:"master" }}"
               width="{{ block.settings.image.width }}"
               height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round }}"
               alt="{{ block.settings.image.alt }}">
          {%- endif -%}
        </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Slider brands",
    "class": "section-slider-brands",
    "settings": [
  {
        "type": "header",
        "content": "==== Background ===="
      },
  {
        "type": "color",
        "id": "bg_color",
        "label": "Color de fondo"
      },
  {
        "type": "header",
        "content": "==== Titulo ===="
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Titulo"
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Column",
        "settings": [
		  {
        "type": "header",
        "content": "==== Imagenes===="
      },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "url",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
         "name": "Slider brands",
        "category": "Text",
        "blocks": [
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          }
        ]
      }
    ]
  }
{% endschema %}
