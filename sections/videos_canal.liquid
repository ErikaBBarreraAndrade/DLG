{{ 'contenedor-videos-youtube.scss.css' | asset_url | stylesheet_tag }}
<div class="container-fluid">
  <div class="row content-video justify-content-center" style="background: url({{ section.settings.image_bg | img_url: 'master'}})">
    <div class="col-10 col-lg-12 text-center">
      {% if section.settings.title != blank%}
      <p class="title text-uppercase mb-0">
        {{ section.settings.title }}
      </p>
      {% endif %}
      {% if section.settings.subtitle != blank%}
      <p class="subtitle text-uppercase">
        {{ section.settings.subtitle }}
      </p>
      {% endif %}
    </div>
    <div class="col-10 col-lg-12 col-xl-11 col-xxl-9">
      <div class="content-slider-videos-small">
        {% for block in section.blocks %}
        <div class="content-block">
          <div class="row">
            {% if block.settings.iframe_link != blank %}
            <div class="col-12">
              <iframe width="100%" height="240" src="{{ block.settings.iframe_link }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
            {% endif %}
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="row">
        {% if section.settings.button_link != blank %}
        <div class="col-12 content-button text-center">
          <a href="{{ section.settings.button_link}}" target="_blank" class="text-uppercase">
            Suscríbete
          </a>
        </div>
        {% endif %}
        {% if section.settings.text_end != blank %}
        <div class="col-12 text-center">
         <p class="text_end">
           	{{ section.settings.text_end }}
          </p>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
"name": "Videos youtube",
"class":"contenedor-videos-youtube",
"settings": [
	     {
          "type": "header",
          "content": "==== Imagen de fondo ===="
        },
	  {
          "type": "image_picker",
          "id": "image_bg",
          "label": "Imagen"
        },
	  {
          "type": "header",
          "content": "==== Titulos ===="
        },
{
          "type": "text",
          "id": "title",
          "label": "Titulo",
          "default": "Agrega un titulo"
        },	
	{
          "type": "text",
          "id": "subtitle",
          "label": "Subtitulo",
          "default": "Agrega un subtitulo"
        },
		  {
          "type": "header",
          "content": "==== Botón ===="
        },
	     {
          "type": "url",
          "id": "button_link",
          "label": "Link Botón"
        },
		  {
          "type": "header",
          "content": "==== Texto final ===="
        },
	{
          "type": "text",
          "id": "text_end",
          "label": "Texto",
          "default": "Agrega un titulo"
        }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Column",
      "settings": [
        {
          "type": "header",
          "content": "==== Link iframe ===="
        },
        {
          "type": "url",
          "id": "iframe_link",
          "label": "Link iframe (ejemplo: https://www.youtube.com/embed/hGaM4LlTQxM)"
        }
      ]
    }
  ],
  "presets": [
    {
       "name": "Videos youtube",
      "category": "Videos",
      "blocks": [
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        }
      ]
    }
  ]
}
{% endschema %}
