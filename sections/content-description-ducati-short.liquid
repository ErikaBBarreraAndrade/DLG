<div class="container-fluid">
	<div class="row content-box-text-description justify-content-center">
		<div class="col-12 col-lg-11 col-xl-10 col-xxl-8">
			<div class="row">
				{% if section.settings.logotipo_imagen != blank %}
				<div class="col-12 col-lg-6 text-center my-auto">
					<div class="row justify-content-center">
						<div class="col-8 col-lg-6">
							<img class="img-fluid lazyload"
							     data-src="{{ section.settings.logotipo_imagen | img_url:"master" }}"
							     data-aspectratio="{{ preview_image.aspect_ratio }}"
							     width="{{ section.settings.logotipo_imagen.width }}"
							     height="{{ section.settings.logotipo_imagen.width | divided_by: section.settings.logotipo_imagen.aspect_ratio | round }}"
							     alt="{{ preview_image.alt | escape }}">
						</div>
					</div>
				</div>
				{% endif %}
				<div class="col-12 col-lg-6 my-auto">
					<div class="content-description-txt">
						{% if section.settings.title != blank %}
						<p class="title mb-0">
							{{section.settings.title}}
						</p>
						{% endif %}
						{% if section.settings.description != blank %}
							<div class="description mb-0">
								{{section.settings.description}}
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% schema %}
{
"name": "Des short ducati",
"class": "description-short-ducati",
"settings": [
{
"type": "header",
"content":"==== Imagen ===="
},
{
"type": "image_picker",
"id":"logotipo_imagen",
"label":"Imagen Logotipo"
},
{
"type": "header",
"content":"==== Titulos ===="
},
{
"type": "text",
"id":"title",
"label":"Titulo"
},
{
"type": "richtext",
"id":"description",
"label":"Descripcion"
}
]
}
{% endschema %}

