<div class="block-section col-12"  style="background-color: {{section.settings.bg_section }}">
	<div class="row">
		{% if section.settings.title != blank %}
			<div class="col-12">
				<div class="section-header text-center {{ title_style }} {{ size_title }}">
					<h2><span>{{ section.settings.title }}</span></h2>
				</div>
			</div>
		{% endif %}
		<div class="col-12">
			<div class="row content-cat-index">
				<div class="content-page-width content-cat-index-wrapper">
					<div class="row justify-content-center row-content-cat-index">
						<div class="col-12">
							<div class="row">
								{% for block in section.blocks %}
									<div class="col-12 col-md-3 block-image col-lg text-center">
										{% if block.settings.button_link != blank %}
											<a href="{{ block.settings.button_link }}">
												<div class="content-image">
													
													{% if block.settings.enable_image %}
														{% if block.settings.image != blank %}
															{{ block.settings.image | img_url: '480x480' | img_tag: 'feature-row__image' }}
														{% else %}
															{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
														{% endif %}
													{% endif %}
													{% if block.settings.title != blank %}
														<h3 class="title">{{ block.settings.title }}</h3>
													{% endif %}
												
												</div>
											</a>
										{% endif %}
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{% if section.blocks.size == 0 %}
			{% include 'no-blocks' %}
		{% endif %}
	</div>
</div>

{% schema %}
{
"name": "Category Inside",
"class": "index-section-category-index",
"settings": [
{
"type": "textarea",
"id": "custom_space",
"label": "Css Style Section",
"default":"padding-top:100px;padding-bottom:100px"
},
{
"type":      "radio",
"id":        "set_box",
"label":     "Set Layout Section",
"options": [
{ "value": "box-container", "label": "Box Container" },
{ "value": "box-full", "label": "Box Full" },
{ "value": "none", "label": "None" }
],
"default":   "box-full",
"info":      "Set Layout Section"
},
{
"type": "color",
"id": "bg_section",
"label": "Background color",
"default": "#ffffff"
},
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Text columns with images"
},
{
"type": "select",
"id": "align_text",
"label": "Text alignment",
"default": "left",
"options": [
{
"value": "left",
"label": "Left"
},
{
"value": "center",
"label": "Centered"
}
]
}
],
"blocks": [
{
"type": "text_block",
"name": "Column",
"settings": [
{
"type": "checkbox",
"id": "enable_image",
"label": "Show image",
"default": true
},
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "url",
"id": "button_link",
"label": "Button link"
},
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Add a title or tagline"
}
]
}
],
"presets": [
{
"name": "Category Inside",
"category": "Category",
"blocks": [
{
"type": "text_block"
},
{
"type": "text_block"
},
{
"type": "text_block"
}
]
}
]
}
{% endschema %}
