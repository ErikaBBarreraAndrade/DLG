$color-red: #F00000;
.box-seminuevas-gral{
  .box-motos-description{
    box-shadow: -2px 5px 17px 0px rgba(112,112,112,0.75);
    -webkit-box-shadow: -2px 5px 17px 0px rgba(112,112,112,0.75);
    -moz-box-shadow: -2px 5px 17px 0px rgba(112,112,112,0.75);
    margin-bottom: 40px;
    .content-description{
      padding: 30px;
      .title{
        font-family: "Open Sans Bold";
        font-size: 30px;
        line-height: 41px;
        @media (min-width: 576px){
          font-size: 35px;
          line-height: 47px;
        }
        @media(min-width: 992px){
          font-size: 30px;
          line-height: 41px;
        }
      }
      .description-motos{
        font-family: "Open Sans Regular";
        font-size: 13px;
        line-height: 18px;
        margin-bottom: 24px;
        @media (min-width: 576px){
          font-size: 20px;
          line-height: 25px;
          width: 500px;
        }
        @media(min-width: 992px){
          font-size: 13px;
          line-height: 18px;
          width: 415px;
        }
      }
      .content-details-motos{
        .label{
          font-family: "Open Sans Regular";
          text-transform: initial;
          color: #999;
          font-size: 10px;
          line-height: 15px;
          @media (min-width: 576px){
            font-size: 15px;
            line-height: 20px;
          }
          @media(min-width: 992px){
            font-size: 13px;
            line-height: 18px;
          }
        }
        .description-label{
          font-family: "Open Sans Regular";
          color: #000;
          font-size: 10px;
          line-height: 15px;
          @media(min-width: 576px){
            font-size: 15px;
            line-height: 21px;
          }
          @media(min-width: 992px){
            font-size: 11px;
            line-height: 16px;
          }
          @media(min-width: 1280px){
            font-size: 13px;
            line-height: 18px;
          }
        }
      }
      .price{
        font-family: "Open Sans Bold";
        font-size: 18px;
        line-height: 55px;
        @media(min-width: 576px){
          font-size: 25px;
          line-height: 55px;
        }
        @media(min-width: 992px){
          margin-right: 30px;
          font-size: 20px;
          line-height: 44px;
        }
      }
      .content-button{
        a{
          font-family: "Open Sans Condensed Bold";
          color: #FFFFFF;
          background: $color-red;
          border-radius: 50px;
          font-size: 13px;
          line-height: 25px;
          @media(min-width: 576px){
            font-size: 17px;
            line-height: 25px;
          }
          @media(min-width: 992px){
            font-size: 15px;
            line-height: 25px;
          }
          &:hover{
            background: #000 !important;
          }
        }
      }
    }
    .content-image{
      padding: 0;
      @media(min-width: 992px){
        padding-left: 15px;
        padding-right: 0;
      }
    }
  }
}
