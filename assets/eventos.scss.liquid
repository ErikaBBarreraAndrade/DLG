$color-red: #FF0000;
.Eventos{
  .header-dlg{
    .header-sticky-wrapper{
      .header-wrapper{
        .site-header{
          background: transparent !important;
          &.site-header--opening{
            background: #000 !important;
          }
        }
      }
    }
  }
  .block-content-tabs-information{
    padding: 50px 0 40px;
    @media (min-width: 576px){
      padding: 90px 0 80px;
    }
    @media(min-width: 992px){
      padding: 140px 0 50px;
    }
    @media(min-width: 1280px){
      padding: 140px 0 50px;
    }
    .nav-tabs{
      border: none;
      margin-bottom: 80px;
      @media (min-width: 576px){
        margin-bottom: 100px;
      }
      @media(min-width: 992px){
        margin-bottom: 130px;
      }
      li{
        &:last-child{
          margin-right: 0;
        }
        #otras-marcas-seminuevas-tab{
          font-family: "Open Sans Bold";
          background: #000;
          color: #FFF;
          border-radius: 50px;
          text-transform: uppercase;
          font-size: 13px;
          line-height: 12px;
          margin-top: 40px !important;
          @media (min-width: 576px){
            font-size: 23px;
            line-height: 12px;
            margin-top: 60px !important;
          }
          @media(min-width: 992px){
            font-size: 13px;
            line-height: 12px;
            margin: auto !important;
          }
        }
        button{
          &:hover{
            border: none;
          }
          &.active{
            border: none;
            border-bottom: 3px solid #000;
          }
        }
      }
    }
    .tab-seminuevas-conocelas{
      padding: 0px;
      @media (min-width: 576px){
        padding: 0 30px;
      }
      @media(min-width: 992px){
        padding: 0 20px;
      }
      @media(min-width: 1280px){
        padding: 0;
      }
    }
    .tab-content{
      .box-motos-description{
        box-shadow: -2px 5px 17px 0px rgba(112,112,112,0.75);
        -webkit-box-shadow: -2px 5px 17px 0px rgba(112,112,112,0.75);
        -moz-box-shadow: -2px 5px 17px 0px rgba(112,112,112,0.75);
        margin-bottom: 40px;
        .content-description{
          padding: 30px;
          .title{
            font-family: "Open Sans Bold";
            font-size: 30px;
            line-height: 41px;
            @media (min-width: 576px){
              font-size: 35px;
              line-height: 47px;
            }
            @media(min-width: 992px){
              font-size: 30px;
              line-height: 41px;
            }
          }
          .description-motos{
            font-family: "Open Sans Regular";
            font-size: 13px;
            line-height: 18px;
            margin-bottom: 24px;
            @media (min-width: 576px){
              font-size: 20px;
              line-height: 25px;
              width: 500px;
            }
            @media(min-width: 992px){
              font-size: 13px;
              line-height: 18px;
              width: 415px;
            }
          }
          .content-details-motos{
            .label{
              font-family: "Open Sans Regular";
              text-transform: initial;
              color: #999;
              font-size: 10px;
              line-height: 15px;
              @media (min-width: 576px){
                font-size: 15px;
                line-height: 20px;
              }
              @media(min-width: 992px){
                font-size: 13px;
                line-height: 18px;
              }
            }
            .description-label{
              font-family: "Open Sans Regular";
              color: #000;
              font-size: 10px;
              line-height: 15px;
              @media(min-width: 576px){
                font-size: 15px;
                line-height: 21px;
              }
              @media(min-width: 992px){
                font-size: 11px;
                line-height: 16px;
              }
              @media(min-width: 1280px){
                font-size: 13px;
                line-height: 18px;
              }
            }
          }
          .price{
            font-family: "Open Sans Bold";
            font-size: 18px;
            line-height: 55px;
            @media(min-width: 576px){
              font-size: 25px;
              line-height: 55px;
            }
            @media(min-width: 992px){
              margin-right: 30px;
              font-size: 20px;
              line-height: 44px;
            }
          }
          .content-button{
            a{
              font-family: "Open Sans Condensed Bold";
              color: #FFFFFF;
              background: $color-red;
              border-radius: 50px;
              font-size: 13px;
              line-height: 25px;
              @media(min-width: 576px){
                font-size: 17px;
                line-height: 25px;
              }
              @media(min-width: 992px){
                font-size: 15px;
                line-height: 25px;
              }
              &:hover{
                background: #000 !important;
              }
            }
          }
        }
        .content-image{
          padding: 0;
          @media(min-width: 992px){
            padding-left: 15px;
            padding-right: 0;
          }
        }
      }
    }
    .section-contenedor-icons-business{
      margin-top: 70px;
      .content-des-icons{
        border-top: 1px solid #707070;
        border-bottom: 1px solid #707070;
        padding: 20px 0;
        .title{
          font-family: "Open Sans Regular";
          font-size: 10px;
          line-height: 14px;
          color: #707070;
          @media (min-width: 576px){
            font-size: 15px;
            line-height: 20px;
          }
          @media(min-width: 992px){
            font-size: 10px;
            line-height: 14px;
          }
        }
        .description{
          p{
            font-family: "Open Sans Regular";
            font-size: 10px;
            line-height: 14px;
            color: #707070;
            margin-bottom: 0;
            @media (min-width: 576px){
              font-size: 15px;
              line-height: 20px;
            }
            @media(min-width: 992px){
              font-size: 10px;
              line-height: 14px;
            }
          }
        }
      }
    }
  }
  .section-icons-description{
    background: #FFF;
    padding: 80px 0;
    @media(min-width: 992px){
      background: #F5F5F5;
    }
    .content-iconos-box{
      .title{
        font-family: "Open Sans Bold";
        font-size: 25px;
        line-height: 29px;
        margin: auto;
        margin-bottom: 50px !important;
        width: 305px;
        @media(min-width: 576px){
          font-size: 35px;
          line-height: 39px;
          width: 580px;
        }
        @media(min-width: 992px){
          font-size: 30px;
          line-height: 39px;
          width: 710px;
        }
        strong{
          color: $color-red;
        }
      }
      .content-info-icono{
        .description{
          font-family: "Open Sans Light";
          font-size: 13px;
          line-height: 19px;
          margin: auto;
          margin-top: 15px;
          margin-bottom: 25px;
          width: 245px;
          @media (min-width: 576px){
            font-size: 20px;
            line-height: 26px;
            margin-top: 32px;
            width: 350px;
            margin-bottom: 40px;
          }
          @media(min-width: 992px){
            font-family: "Sharp Grotesk Book";
            font-size: 13px;
            line-height: 19px;
            width: 175px;
          }
        }
      }
    }
  }
  .eventos-proximos{
    margin-top: 30px;
    .content-box-general{
      margin-top: 40px !important;
      width: 95% !important;
    }
  }
  .section-bloque-texto-simple{
    .content-box-txt{
      .title{
        font-family: "Open Sans Regular";
        font-size: 30px;
        line-height: 35px;
        color: #000;
        margin: auto;
        width: auto !important;
        @media(min-width: 576px){
          font-size: 55px!important;
          line-height: 57px!important;
        }
        @media(min-width: 992px){
          font-size: 45px!important;
          line-height: 38px!important;
        }
        strong{
          font-family: "Open Sans Bold";
          color: $color-red;
          @media(max-width: 991px){
            display: block;
          }
        }
      }
      .description{
        font-family: "Open Sans Regular";
        margin: auto;
        @media(min-width: 992px){
          width: 500px;
        }
        p{
          font-size: 15px !important;
          line-height: 17px !important;
          width: 338px !important;
          @media(min-width: 576px){
            font-size: 25px!important;
            line-height: 27px!important;
            width: 560px !important;
          }
          @media(min-width: 992px){
            font-size: 16px!important;
            line-height: 19px!important;
            width: auto !important;
          }
        }
      }
    }
  }
  .section-bloque-eventos-pasados{
    margin-bottom: 65px;
    .content-box-txt{
      .content-box-general{
        margin: auto;
        @media(min-width: 992px){
          width: 90%;
        }
        .header--event{
          margin-top:-10px;
          margin-bottom: 30px;
          font-size: 25px;
          line-height: 28px;
          color: #000;
          text-transform: uppercase;
          position: relative;
          @media(min-width: 576px){
            font-size: 35px;
            line-height: 38px;
          }
          @media(min-width: 992px){
            font-size: 30px;
            line-height: 38px;
          }
          &:after{
            position: absolute;
            width: 100%;
            height: 1px;
            background: #000;
            left: 0;
            margin-top: 18px;
            @media(min-width: 576px){
              content: "";
            }
          }
          span{
            background: #FFF;
            position: relative;
            z-index: 9;
            padding: 0px 20px;
            @media(min-width: 992px){
              padding: 0;
            }
            &.title-left{
              font-family: "Open Sans Bold";
              padding: 0;
              @media(min-width: 992px){
                padding-right: 20px;
              }
            }
            &.title-right{
              font-family: "Open Sans Light Italic";
              padding-left: 20px;
              display: none;
              @media(min-width: 992px){
                display: block;
              }
            }
          }
        }
        .content-box-description{
          .description-box{
            text-align: center;
            @media(min-width: 992px){
              padding-left: 30px;
               text-align: left;
            }
            .date{
              font-family: "Open Sans Bold";
              color: #000;
              font-size: 13px;
              line-height: 12px;
              margin-top: 30px;
              @media(min-width: 576px){
                font-size: 18px;
                line-height: 12px;
              }
              @media(min-width: 992px){
                margin-top: 0;
                font-size: 13px;
                line-height: 12px;
              }
            }
            .title{
              font-family: "Open Sans Light";
              font-size: 27px;
              line-height: 30px;
              @media(min-width: 576px){
                font-size: 40px;
                line-height: 42px;
                width: 545px;
              }
              @media(max-width: 991px){
                margin: auto;
              }
              @media(min-width: 992px){
                font-size: 35px;
                line-height: 35px;
                width: 500px;
              }
              strong{
                font-family: "Open Sans Bold";
                color: $color-red;
                letter-spacing: -1px;
                @media(max-width: 991px){
                  display: block;
                }
              }
            }
            .description{
              font-family: "Open Sans Regular";
              margin-top: 30px !important;
              text-align: justify;
              @media(min-width: 576px){
                width: 570px;
                margin-top: 50px !important;
              }
              @media(max-width: 991px){
                margin: auto;
              }
              @media(min-width: 992px){
                margin-top: 0 !important;
                width: 570px;
              }
              p{
                font-size: 15px;
                line-height: 17px;
                color: #707070;
                @media(min-width: 576px){
                  font-size: 25px;
                  line-height: 27px;
                }
                @media(min-width: 992px){
                  font-size: 15px;
                  line-height: 17px;
                }
              }
            }
          }
        }
      }
    }
  }
  .agusta-brutale-800-gallery {
    background: #FFF;
    padding: 0px 0 75px;
    @media(min-width: 768px) {
      padding: 0px 0 75px;
    }
    @media(min-width: 992px) {
      padding: 0px 0 75px;
    }

    .grid-overflow-wrapper {
      overflow: hidden;
      margin: auto;
      @media(min-width: 992px){
        width: 90%;
      }
      .grid--uniform {
        overflow-x: scroll;

        &::-webkit-scrollbar-thumb {
          background: #000;
        }

        &::-webkit-scrollbar {
          width: 5px;
          height: 3px;
          background-color: #aaa; /* or add it to the track */
        }

        .block-image {
          padding: 0 3px;
          @media(max-width: 991px){
            width: 500px;
          }
          img{
            @media(max-width: 991px){
              padding-bottom: 40px;
            }
          }
        }
      }
    }
  }
  .seccion-contacto-eventos{
    .title{
      text-transform: uppercase;
      font-family: "Open Sans Bold";
      font-size: 15px;
      line-height: 17px;
      color: #000;
      margin: auto 35px 35px;
      
      @media(min-width: 576px){
        font-size: 25px;
        line-height: 27px;
      }
      @media(min-width: 992px){
        font-family: "Open Sans Light";
        font-size: 18px;
        line-height: 19px;
        width: 360px;
      }
    }
    #contact_form{
      margin: auto;
      margin-bottom: 100px;
      @media(min-width: 576px){
        padding: 0 60px;
      }
      @media(min-width: 992px){
        padding: 0;
        width: 40%;
      }
      input{
        border-radius: 0;
        font-family: "Open Sans Italic";
        font-size: 15px;
        line-height: 20px;
        color: #707070;
        height: 60px;
        margin-bottom: 7px;
        border: 1px solid #707070;
        @media(min-width: 576px){
          height: 80px;
        }
        @media(min-width: 992px){
          height: 60px;
        }
        &::placeholder{
          font-family: "Open Sans Italic";
          font-size: 15px;
          line-height: 20px;
          color: #707070;
          @media(min-width: 576px){
          }
          @media(min-width: 992px){
          }
        }
      }
      .btn{
        margin-top: 20px;
        background: #000;
        font-family: "Open Sans Bold";
        color: #FFF;
        font-size: 13px;
        line-height: 12px;
        padding: 5px 20px;
        border-radius: 50px;
        @media(min-width: 576px){
          padding: 15px 20px;
          font-size: 23px;
          line-height: 12px;
        }
        @media(min-width: 992px){
          padding: 5px 20px;
          border-radius: 0;
          font-size: 13px;
          line-height: 12px;
        }
      }
    }
  }
}
