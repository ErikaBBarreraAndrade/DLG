#NavDrawer{
  .drawer__fixed-header{
    padding-top: 20px;
    button{
      padding: 0;
      svg{
        path{
          stroke-width: 4px !important;
        }
      }
    }
  }
  &.drawer--right{
    @media(max-width: 991px) {
      left: -100%;
      width: 100%;
      max-width: 100%;
    }
  }
  &.drawer--is-open{
    @media(max-width: 991px){
      transform: translateX(100%);
    }
  }
  .mobile-nav__social{
    margin-top: 80px;
    @media(min-width: 992px){
      margin-top: 140px;
    }
  }
  /* Todo el menu en accordion */
  .mobile-nav__grandchildlist .mobile-nav__link {
    padding-left: 0px !important;
  }
  .accordion{
    color: #FFFFFF;
    a.accordion-button{
      &:after{
        content: none !important;
      }
    }
    &#menuPrincipalHome{
      .accordion-item{
        margin-bottom: 30px;
      }
    }
    .accordion-item{
      background: transparent !important;
      border: none !important;
      .accordion-button{
        background-color: transparent !important;
        padding: 0;
        &:after{
          content: none;
          background-image: url({{ "arrow-down-menu.svg" | asset_url }}) ;
        }
        &.link-whit-collapse-accordion{
          font-family: "Open Sans Regular";
          font-size: 18px;
          line-height: 18px;
          text-transform: uppercase;
        }
        span{
          display: block;
          width: 50%;
        }
        &:focus{
          border-color: transparent !important;
          box-shadow: none !important;
        }
      }
      &:nth-child(1){
        .link-whit-collapse-accordion{
          &:after{
            content: "" !important;
          }
        }
      }
      &:nth-child(2){
        .link-whit-collapse-accordion{
          &:after{
            content: "" !important;
          }
        }
      }
    }
    .accordion-body {
      padding: 0;
    }
    &#menuPrincipal{
      padding-left: 20px;
      padding-top: 15px;
      .accordion-item{
        margin-bottom: 0;
        .accordion-button{
          font-family: "Open Sans Regular";
          color: #FFFFFF;
          font-size: 16px;
          line-height: 16px;
          text-transform: uppercase;
          padding: 5px 0;
          &:after{
            content: "";
          }
          &:focus{
            border-color: transparent !important;
            box-shadow: none !important;
          }
        }
      }
    }
    &.accordion-secundary-items{
      margin: 8px 0;
      .accordion-item{
        a{
          padding: 11px 15px 11px;
          font-family: "Open Sans SemiBold" !important;
          text-transform: uppercase !important;
          font-size: 13px !important;
          line-height: 13px !important;
          color: #FFFFFF !important;
        }
        .accordion-button{
          font-family: "Open Sans SemiBold" !important;
          text-transform: uppercase !important;
          font-size: 13px !important;
          line-height: 13px !important;
          color: #FFFFFF !important;
          padding: 0;
          span{
            padding: 0 15px;
          }
          &:focus{
            border-color: transparent !important;
            box-shadow: none !important;
          }
        }
        a.accordion-button{
          &:after{
            content: none !important;
          }
        }
        .accordion-body{
          ul{
            list-style: none;
            li{
              a{
                font-family: "Open Sans Light Italic" !important;
                font-size: 13px!important;
                line-height: 13px!important;
                text-transform: initial!important;
                padding: 5px 0;
              }
            }
          }
        }
      }
    }
  }
  /* Todo el menu en accordion */
  .mobile-nav__estaticas{
    li{
      a{
        font-family: "Open Sans Regular";
        text-decoration: none;
        font-size: 13px;
        line-height: 18px;
        color: #FFF;
        transition: all 0.5s;
        &:hover{
          color: $color-red;
        }
      }
    }
  }
  .list-header-link{
    margin-bottom: 30px;
    @media(min-width: 992px){
      margin-bottom: 50px;
    }
    a{
      text-decoration: none;
      font-size: 13px;
      line-height: 18px;
      color: #FFF;
      transition: all 0.5s;
      &:hover{
        color: $color-red;
      }
    }
  }
  &.drawer--right{
    @media(min-width: 992px){
      width: 505px;
      right: -505px;
    }
    &.drawer--is-open{
      @media(min-width: 992px){
        transform: translateX(-505px);
        .drawer__header{
          border: none;
        }
        .drawer__scrollable{
          .mobile-nav__toggle{
            button{
              border: none;
            }
          }
          .mobile-nav{
            .mobile-nav__item{
              &:after{
                content: none;
              }
              .mobile-nav__link{
                font-size: 18px;
                line-height: 18px;
                @media(min-width: 992px){
                  font-size: 18px;
                  line-height: 18px;
                }
              }
              .mobile-nav__sublist{
                padding-left: 7px;
                .mobile-nav__item{
                  .mobile-nav__link{
                    font-family: 'Open Sans Regular';
                    font-size: 15px;
                    line-height: 15px;
                    text-transform: uppercase;
                    @media(min-width: 768px){
                      font-size: 16px;
                      line-height: 16px;
                    }
                  }
                  button{
                    span{
                      &.collapsible-trigger__icon{
                        border: none !important;
                      }
                    }
                  }
                }
	              .mobile-nav__grandchildlist{
                  padding: 20px 25px;
		              li{
			              a{
                      padding-left: 0 !important;
                      text-transform: uppercase;
                      font-family: 'Open Sans SemiBold';
				              font-size: 13px !important;
                    }
			              button{
                      text-transform: uppercase;
                      font-family: 'Open Sans SemiBold';
                      font-size: 13px !important;
                      span{
                        padding-left: 0 !important;
                        text-transform: uppercase;
                        font-family: 'Open Sans SemiBold';
                        font-size: 13px !important;
                      }
			              }
		              }
	              }
              }
            }
          }
        }
      }
	    .box-menu-inside-last{
		    .collapsible-content{
			    .collapsible-content__inner{
				    .mobile-nav__grandchildlist{
              li{
                a{
                  text-transform: capitalize !important;
                  font-family: 'Open Sans Light Italic' !important;
                  font-size: 13px;
                }
              }
				    }
			    }
		    }
	    }
    }
  }
}
