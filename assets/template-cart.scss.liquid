.template-cart{
  .section-header__title{
    font-family: 'Open Sans Bold';
    color: #000;
    font-size: 40px;
  }
	.cart__row{
		a{
      font-size: 15px;
		}
		img{
      border: 1px solid rgba(112,112,112,.3);
      padding: 20px;
		}
		.cart__price{
      color: #F00000;
      font-size: 20px;
      line-height: 27px;
      font-family: 'Open Sans Extra Bold';
		}
		.cart__product-meta{
			.btn{
        background: #F00000;
        color: #FFFFFF;
				border-radius: 0;
				font-size: 12px;
			}
		}
	}
	a{
    color: #000;
    text-decoration: none;
	}
	.cart__update{
    display: none;
	}
	.cart__checkout{
    font-family: 'Open Sans Bold';
    font-size: 15px;
    line-height: 8px;
    color: #000;
    border-radius: 0;
    border: 1px solid #000;
    padding: 10px;
    margin-top: 20px;
    &:hover{
      background: transparent !important;
    }
	}
}