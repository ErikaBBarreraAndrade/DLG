.template-collection{
  .grid-product__tag{
    right: 0;
  }
  .grid-product__colors{
    display: none !important;
  }
  .agusta-menu-final{
    display: none;
  }
  .grid-collection-products-global{
    .content-product{
      display: none;
    }
  }
  .pagination{
    .page{
      color: #000;
      a{
        color: #000;
        text-decoration: none;
      }
    }
  }
  .title-collection{
    font-family: 'Open Sans Bold';
    margin-top: -55px;
    font-size: 30px;
    line-height: 18px;
  }
  .grid-product__image-mask{
    .image-wrap{
      border: 1px solid #707070;
    }
    #ProductSelect-, .block-dropdown-variant, .content-group-select {
      display: none;
    }
  }
  .grid-product__link{
    color: #000;
    text-decoration: none;
    .grid-product__title{
      text-align: center;
      font-family: "Open Sans Semibold";
      font-size: 15px;
      line-height: 20px;
      text-transform: uppercase;
      margin-top: 25px;
      min-height: 55px;
      @media(min-width: 992px){
        font-size: 11px;
        line-height: 15px;
      }
      @media(min-width: 1280px){
        font-size: 12px;
        line-height: 20px;
      }
      @media(min-width: 1400px){
        font-size: 15px;
        line-height: 20px;
      }
    }
    .grid-product__price{
      font-family: "Open Sans Extra Bold";
      color: $color-red;
      font-size: 20px;
      line-height: 27px;
    }
  }
  .collection-content-products{
    margin-top: 100px;
  }
  .box-newsletter{
    display: none;
  }
  .block-dropdown-variant{
    display: none;
  }
  .content-button-cart{
    text-align: center;
    margin: 0 !important;
    .add-to-cart{
      font-family: "Open Sans Bold";
      margin-top: 20px;
      font-size: 15px;
      border-radius: 0px;
      line-height: 20px;
      width: auto;
      border: 1px solid #000;
      @media(min-width: 992px){
        font-size: 12px;
        line-height: 20px;
      }
      @media(min-width: 1400px){
        font-size: 15px;
        line-height: 20px;
      }
      &:hover{
        background: transparent !important;
      }
    }
  }

  #CollectionSidebar{
    .collection-sidebar{
      .tag-list--active-tags{
        padding-left: 0;
        li{
          a{
            border: 1px solid #FFF;
            transition: all 0.5s;
            &:hover{
              background: transparent;
              background: #000;
              color: #FFF;
              border: 1px solid #000;
            }
          }
        }
      }
      .collection-sidebar__group{
        border: none !important;
        .collapsible-trigger-btn{
          color: #000;
          font-family: "Open Sans Semibold";
          font-size: 15px;
          line-height: 20px;
        }
        .collapsible-content{
          .collapsible-content__inner{
            ul{
              padding-left: 0;
              li{
                a{
                  text-decoration: none;
                  color: #6A6A6A;
                  font-family: "Open Sans Semibold";
                  font-size: 13px;
                  line-height: 18px;
                  text-transform: capitalize;
                }
              }
            }
          }
        }
      }
    }
  }
  .collection-content{
    padding: 0;
    margin-top: -95px;
    .bloque-bottom-bg{
      background: #F5F5F5;
      height: 165px;
    }
    .content-banner{
      min-height: 860px;
      background-position: center !important;
      background-size: cover !important;
      .content-description-txt{
        padding-top: 190px;
        .title{
          font-family: "Open Sans Light";
          text-transform: uppercase;
          color: #FFF;
          font-size: 40px;
          line-height: 45px;
          @media(min-width: 992px){
            width: 425px;
          }
          strong{
            font-family: "Open Sans Bold";
          }
        }
        .description{
          color: #FFF;
          font-family: "Open Sans Regular";
          font-size: 15px;
          line-height: 20px;
          @media(min-width: 992px){
            width: 460px;
          }
        }
        .content-button{
          a{
            font-family: "Open Sans Bold";
            color: #FFFFFF;
            text-decoration: none;
            text-transform: uppercase;
            font-size: 15px;
            line-height: 12px;
            background: $color-red;
            padding: 10px 20px;
            border-radius: 0;
          }
        }
      }
    }
    .content-block-image-menu{
      flex: 0 0 auto;
      width: 240px;
      margin-left: 5px;
      margin-top: -253px;
      .content-banner-menu{
        height: 315px !important;
        .content-button{
          margin-bottom: 50px;
          a{
            color: #FFF;
            background: transparent !important;
            font-family: "Open Sans Bold";
            font-size: 23px;
            line-height: 26px;
            transition: all 0.5s;
            &:hover{
              color: $color-red;
              background: transparent !important;
            }
          }
        }
      }
    }
  }
  .content-collection{
    margin-top: 130px;
    .grid--collection{
      margin-top: 45px;
    }
    .content-product-grid{
      .section-header__title{
        color: #000;
        font-family: "Open Sans Bold";
        font-size: 30px;
        line-height: 18px;
        text-transform: uppercase;
        margin-bottom: 45px;
      }
    }
    .collection-filter__item{
      .txt-orderby{
        font-family: "Open Sans Light";
        font-size: 13px;
        line-height: 18px;
        color: #6A6A6A;
      }
    }
    .grid-product__image-mask{
      .image-wrap{
        border: 1px solid #707070;
      }
      #ProductSelect-, .block-dropdown-variant, .content-group-select {
        display: none;
      }
    }
    .grid-product__title{
      text-align: center;
      font-family: "Open Sans Semibold";
      font-size: 15px;
      line-height: 20px;
      text-transform: uppercase;
      margin-top: 25px;
      @media(min-width: 992px){
        font-size: 11px;
        line-height: 15px;
        height: 95px;
      }
      @media(min-width: 1280px){
        font-size: 12px;
        line-height: 20px;
      }
      @media(min-width: 1400px){
        font-size: 15px;
        line-height: 20px;
        height: 75px;
      }
    }
    .grid-product__price{
      font-family: "Open Sans Extra Bold";
      color: $color-red;
      font-size: 20px;
      line-height: 27px;
    }
    .button-buy-product{
      .content-button-cart{
        text-align: center;
        margin: 0 !important;
        .add-to-cart{
          font-family: "Open Sans Bold";
          margin-top: 20px;
          font-size: 15px;
          border-radius: 0px;
          line-height: 20px;
          width: auto;
          border: 1px solid #000;
          @media(min-width: 992px){
            font-size: 12px;
            line-height: 20px;
          }
          @media(min-width: 1400px){
            font-size: 15px;
            line-height: 20px;
          }
          &:hover{
            background: transparent !important;
          }
        }
      }
    }
    .block-dropdown-variant{
      display: none;
    }
  }
}
