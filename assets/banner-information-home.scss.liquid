$color-red: #F00000;
/*================== DLG banner promocional home  ==================*/
.banner-information-home{
  .content-image{
    /* img{
			 object-fit: cover;
			 height: 100%;
			 object-position: right;
		 }*/
    @media(max-width: 991px){
      padding: 0;
    }
  }
  .content-information-promotions{
    padding: 20px 0;
    .title{
      font-family: 'Open Sans Bold';
      font-size: 25px;
      line-height: 30px;
      color: #FFF;
      margin-top: 30px;
      @media(min-width: 576px){
        font-size: 45px;
        line-height: 34px;
      }
      @media(min-width: 992px){
        margin-top: 0px;
        font-size: 25px;
        line-height: 19px;
      }
    }
    .subtitle{
      font-family: 'Open Sans Light';
      font-size: 21px;
      font-height: 23px;
      color: #FFF;
      @media(min-width: 768px){
        font-size: 31px;
        font-height: 33px;
      }
      @media(min-width: 992px){
        font-size: 18px;
        font-height: 19px;
      }
    }
    .description{
      font-family: 'Open Sans Regular';
      font-size: 15px;
      line-height: 17px;
      color: #FFF;
      margin: auto;
      width: 300px;
      @media(min-width: 576px){
        width: 500px;
      }
      @media(min-width: 768px){
        font-size: 25px;
        line-height: 27px;
      }
      @media(min-width: 992px){
        margin-left: 0;
        font-size: 13px;
        line-height: 18px;
        width: auto;
      }
      @media(min-width: 1500px){
        width: 450px;
      }
      strong{
        font-family: 'Open Sans Bold';
        font-size: 15px;
        line-height: 17px;
        @media(min-width: 768px){
          font-size: 25px;
          line-height: 27px;
        }
        @media(min-width: 992px){
          font-size: 13px;
          line-height: 12px;
        }
      }
    }
    .content-link{
      @media(min-width: 768px){
      }
      @media(min-width: 992px){
      }
      a{
        font-family: 'Open Sans Bold';
        font-size: 15px;
        line-height: 12px;
        color: $color-red;
        text-transform: uppercase;
        @media(min-width: 768px){
          font-size: 25px;
          line-height: 12px;
        }
        @media(min-width: 992px){
          font-size: 13px;
          line-height: 12px;
        }
      }
    }
    .price{
      font-family: 'Open Sans Extra Bold';
      font-size: 25px;
      line-height: 37px;
      color: #FFF;
      @media(min-width: 768px){
        font-size: 35px;
        line-height: 47px;
      }
      @media(min-width: 992px){
        font-size: 20px;
        line-height: 27px;
      }
    }
    .content-button{
      @media(min-width: 768px){
      }
      @media(min-width: 992px){
      }
      a{
        text-transform: uppercase;
        font-family: 'Open Sans Bold';
        text-decoration: none;
        font-size: 13px;
        line-height: 12px;
        color: #FFF;
        border: 1px solid #FFF;
        padding: 4px 13px;
        border-radius: 50px;
        @media(min-width: 768px){
          font-size: 23px;
          line-height: 12px;
        }
        @media(min-width: 992px){
          border-radius: 0;
          font-size: 13px;
          line-height: 12px;
        }
      }
    }
  }
}