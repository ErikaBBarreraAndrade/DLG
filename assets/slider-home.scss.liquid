.slider-home{
	.top-title{
    font-family: "Open Sans Bold";
    color: #FFF;
    font-size: 20px;
    line-height: 25px;
    width: 80%;
    margin-bottom: 0;
		@media (min-width: 576px) {
      font-size: 50px;
      line-height: 50px;
      width: auto;
    }
		@media (min-width: 992px) {
      font-size: 45px;
      line-height: 48px;
      width: 800px;
    }
		@media (min-width: 1400px) {
      font-size: 40px;
      line-height: 43px;
      width: 100%;
    }
    @media (min-width: 1800px) {
      font-size: 45px;
      line-height: 48px;
      width: 85%;
    }
  }
	.box-logotipo{
    margin-top: 10px;
    margin-bottom: 10px;
    @media (min-width: 576px) {
      margin-top: 45px;
      margin-bottom: 30px;
    }
    @media (min-width: 992px) {
      margin-top: 45px;
      margin-bottom: 0;
    }
	}
	.box-buttons-group{
		ul{
			li{
        margin-top: 5px;
        @media (min-width: 576px) {
          margin-top: 20px;
        }
        @media (min-width: 992px) {
          margin-right: 18px;
          margin-top: 45px;
        }
				&:last-child{
          margin-right: 0;
				}
			}
		}
	}
	.description{
    color: #FFFFFF;
    font-family: "Open Sans Light";
    font-size: 15px;
    line-height: 18px;
    letter-spacing: 0;
    text-transform: initial;
    margin: 20px 0;
		@media (min-width: 576px) {
      font-size: 30px;
      line-height: 33px;
    }
		@media (min-width: 992px) {
      font-family: "Open Sans Bold";
      margin: 20px auto 35px;
      font-size: 13px;
      line-height: 15px;
      width: 385px;
    }
	}
	.content-description-especificaciones{
    margin-top: 45px;
		.label{
      font-family: "Open Sans Semibold";
      letter-spacing: 0;
      font-size: 10px;
      line-height: 17px;
      text-transform: initial;
      margin-bottom: 5px;
      color: #FFFFFF;
      @media (min-width: 576px) {
        font-size: 20px;
        line-height: 27px;
      }
			@media (min-width: 992px) {
        font-size: 15px;
        line-height: 20px;
      }
		}
		.description{
      font-family: "Open Sans Regular";
      font-size: 10px;
      line-height: 17px;
      letter-spacing: 0;
      color: #FFFFFF;
      @media (min-width: 576px) {
        font-size: 20px;
        line-height: 27px;
      }
      @media (min-width: 992px) {
        font-size: 15px;
        line-height: 20px;
      }
		}
	}
	.subtitulo_final{
    color: #FFF;
    font-family: "Open Sans Bold";
		text-align: center;
    font-size: 15px;
    line-height: 23px;
    margin-top: 20px;
    width: 90%;
    @media (min-width: 576px) {
      margin-top: 38px;
    }
  }
	.texto_final{
    color: #FFF;
    font-family: "Open Sans Regular";
    font-size: 13px;
    line-height: 23px;
    text-align: center;
	}
  .slick-dots {
    bottom: 100px;
    @media (min-width: 576px) {
      bottom: 125px;
    }
    @media (min-width: 992px) {
      bottom: 160px;
    }
    @media (min-width: 1800px) {
      bottom: 125px;
    }
    li{
      width: 11px;
	    height: 11px;
	    border: 1px solid #FFF;
	    border-radius: 50%;
	    &.slick-active{
        width: 11px;
        height: 11px;
        border: 1px solid #FFF;
        background: #FFFFFF;
	    }
      button{
	      &:before{
		      content: none !important;
	      }
      }
    }
  }
}