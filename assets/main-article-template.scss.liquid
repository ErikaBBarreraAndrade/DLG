.main-article-template{
	.content-global{
    padding-bottom: 40px;
    @media (min-width: 1280px) {
      padding-bottom: 70px;
    }
		.content-return-link{
			a{
        font-family: 'Open Sans Bold';
        color: #000;
        font-size: 13px;
        line-height: 15px;
        text-transform: initial;
        padding: 0;
        text-align: left;
				span{
          margin-right: 20px;
				}
			}
		}
		.content-date-article{
      font-family: 'Open Sans Bold';
      color: #9B9B9B;
      font-size: 13px;
      line-height: 15px;
      margin-top: 15px;
    }
		.content-header__title{
      font-family: 'Open Sans Bold';
      color: #000;
      font-size: 30px;
      line-height: 35px;
      margin-top: 15px;
      @media (min-width: 576px) {
        width: 80%;
      }
      @media (min-width: 1280px) {
        font-size: 45px;
        line-height: 50px;
      }
    }
		.article__content{
      font-family: 'Open Sans Light';
      color: #000;
      font-size: 15px;
      line-height: 22px;
      margin-top: 45px;
      @media (min-width: 1280px) {
        font-size: 13px;
        line-height: 18px;
      }
			img{
        width: auto;
				height: auto;
        margin: 40px 0;
			}
		}
		.content-image-article{
      padding: 0;
          text-align: center;
      @media (min-width: 992px) {
        padding: 0 15px;
      }
			.article__content{
        margin-top: 0;
			}
		}
		.content-link-next{
      margin-top: 30px;
			a{
        font-family: 'Open Sans Bold';
        color: #000;
        font-size: 13px;
        line-height: 15px;
				span{
          margin-right: 10px;
				}
			}
		}
	}
}
.content-form-newsletter{
  display: none !important;
}
