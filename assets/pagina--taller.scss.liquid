/*================== Pagina Taller  ==================*/
$color-red: #F00000;
.Taller{
  .header-dlg{
    .header-sticky-wrapper{
      .header-wrapper{
        .site-header{
          background: transparent !important;
          &.site-header--opening{
            background: #000 !important;
          }
        }
      }
    }
  }
  .block-content-tabs-information{
    padding: 50px 0 40px;
    @media (min-width: 576px){
      padding: 90px 0 80px;
    }
    @media(min-width: 992px){
      padding: 140px 0 50px;
    }
    @media(min-width: 1280px){
      padding: 140px 0 50px;
    }
    .nav-tabs{
      border: none;
      margin-bottom: 80px;
      @media (min-width: 576px){
        margin-bottom: 100px;
      }
      @media(min-width: 992px){
        margin-bottom: 130px;
      }
      li{
        &:last-child{
          margin-right: 0;
        }
        #otras-marcas-seminuevas-tab{
          font-family: "Open Sans Bold";
          background: #000;
          color: #FFF;
          border-radius: 50px;
          text-transform: uppercase;
          font-size: 13px;
          line-height: 12px;
          margin-top: 40px !important;
          @media (min-width: 576px){
            font-size: 23px;
            line-height: 12px;
            margin-top: 60px !important;
          }
          @media(min-width: 992px){
            font-size: 13px;
            line-height: 12px;
            margin: auto !important;
          }
        }
        button{
          &:hover{
            border: none;
          }
          &.active{
            border: none;
            border-bottom: 3px solid #000;
          }
        }
      }
    }
    .tab-seminuevas-conocelas{
      padding: 0px;
      @media (min-width: 576px){
        padding: 0 30px;
      }
      @media(min-width: 992px){
        padding: 0 20px;
      }
      @media(min-width: 1280px){
        padding: 0;
      }
    }
    .tab-content{
      .box-motos-description{
        box-shadow: -2px 5px 17px 0px rgba(112,112,112,0.75);
        -webkit-box-shadow: -2px 5px 17px 0px rgba(112,112,112,0.75);
        -moz-box-shadow: -2px 5px 17px 0px rgba(112,112,112,0.75);
        margin-bottom: 40px;
        .content-description{
          padding: 30px;
          .title{
            font-family: "Open Sans Bold";
            font-size: 30px;
            line-height: 41px;
            @media (min-width: 576px){
              font-size: 35px;
              line-height: 47px;
            }
            @media(min-width: 992px){
              font-size: 30px;
              line-height: 41px;
            }
          }
          .description-motos{
            font-family: "Open Sans Regular";
            font-size: 13px;
            line-height: 18px;
            margin-bottom: 24px;
            @media (min-width: 576px){
              font-size: 20px;
              line-height: 25px;
              width: 500px;
            }
            @media(min-width: 992px){
              font-size: 13px;
              line-height: 18px;
              width: 415px;
            }
          }
          .content-details-motos{
            .label{
              font-family: "Open Sans Regular";
              text-transform: initial;
              color: #999;
              font-size: 10px;
              line-height: 15px;
              @media (min-width: 576px){
                font-size: 15px;
                line-height: 20px;
              }
              @media(min-width: 992px){
                font-size: 13px;
                line-height: 18px;
              }
            }
            .description-label{
              font-family: "Open Sans Regular";
              color: #000;
              font-size: 10px;
              line-height: 15px;
              @media(min-width: 576px){
                font-size: 15px;
                line-height: 21px;
              }
              @media(min-width: 992px){
                font-size: 11px;
                line-height: 16px;
              }
              @media(min-width: 1280px){
                font-size: 13px;
                line-height: 18px;
              }
            }
          }
          .price{
            font-family: "Open Sans Bold";
            font-size: 18px;
            line-height: 55px;
            @media(min-width: 576px){
              font-size: 25px;
              line-height: 55px;
            }
            @media(min-width: 992px){
              margin-right: 30px;
              font-size: 20px;
              line-height: 44px;
            }
          }
          .content-button{
            a{
              font-family: "Open Sans Condensed Bold";
              color: #FFFFFF;
              background: $color-red;
              border-radius: 50px;
              font-size: 13px;
              line-height: 25px;
              @media(min-width: 576px){
                font-size: 17px;
                line-height: 25px;
              }
              @media(min-width: 992px){
                font-size: 15px;
                line-height: 25px;
              }
              &:hover{
                background: #000 !important;
              }
            }
          }
        }
        .content-image{
          padding: 0;
          @media(min-width: 992px){
            padding-left: 15px;
            padding-right: 0;
          }
        }
      }
    }
    .section-contenedor-icons-business{
      margin-top: 70px;
      .content-des-icons{
        border-top: 1px solid #707070;
        border-bottom: 1px solid #707070;
        padding: 20px 0;
        .title{
          font-family: "Open Sans Regular";
          font-size: 10px;
          line-height: 14px;
          color: #707070;
          @media (min-width: 576px){
            font-size: 15px;
            line-height: 20px;
          }
          @media(min-width: 992px){
            font-size: 10px;
            line-height: 14px;
          }
        }
        .description{
          p{
            font-family: "Open Sans Regular";
            font-size: 10px;
            line-height: 14px;
            color: #707070;
            margin-bottom: 0;
            @media (min-width: 576px){
              font-size: 15px;
              line-height: 20px;
            }
            @media(min-width: 992px){
              font-size: 10px;
              line-height: 14px;
            }
          }
        }
      }
    }
  }
  .section-icons-description{
    background: #FFF;
    padding: 80px 0;
    @media(min-width: 992px){
      background: #F5F5F5;
    }
    .content-iconos-box{
      .title{
        font-family: "Open Sans Bold";
        font-size: 25px;
        line-height: 29px;
        margin: auto;
        margin-bottom: 50px !important;
        width: 305px;
        @media(min-width: 576px){
          font-size: 35px;
          line-height: 39px;
          width: 580px;
        }
        @media(min-width: 992px){
          font-size: 30px;
          line-height: 39px;
          width: 710px;
        }
        strong{
          color: $color-red;
        }
      }
      .content-info-icono{
        .description{
          font-family: "Open Sans Light";
          font-size: 13px;
          line-height: 19px;
          margin: auto;
          margin-top: 15px;
          margin-bottom: 25px;
          width: 245px;
          @media (min-width: 576px){
            font-size: 20px;
            line-height: 26px;
            margin-top: 32px;
            width: 350px;
            margin-bottom: 40px;
          }
          @media(min-width: 992px){
            font-family: "Sharp Grotesk Book";
            font-size: 13px;
            line-height: 19px;
            width: 175px;
          }
        }
      }
    }
  }
  .section-bloque-texto-simple{
    .content-box-txt{
      .title{
        font-family: "Open Sans Light";
        color: #000;
        margin: auto;
        width: 350px !important;
        @media(min-width: 576px){
          width: 555px !important;
        }
        @media(min-width: 992px){
          width: 590px !important;
          margin: auto !important;
        }
        strong{
          font-family: "Open Sans Bold";
        }
      }
      .description{
        font-family: "Open Sans Regular";
        margin: auto;
        p{
          width: 350px !important;
          @media(min-width: 576px){
            width: 586px !important;
          }
          @media(min-width: 992px){
            margin: auto;
            margin-top: 30px;
            width: 590px !important;
          }
        }
      }
    }
  }
  .agusta-brutale-800-gallery {
    background: #FFF;
    padding: 50px 0 150px;
    @media(min-width: 768px) {
      padding: 80px 0 150px;
    }
    @media(min-width: 992px) {
      padding: 70px 0 135px;
    }

    .grid-overflow-wrapper {
      overflow: hidden;
      margin: auto;
      @media(min-width: 992px){
        width: 90%;
      }
      .grid--uniform {
        overflow-x: scroll;

        &::-webkit-scrollbar-thumb {
          background: #000;
        }

        &::-webkit-scrollbar {
          width: 5px;
          height: 3px;
          background-color: #aaa; /* or add it to the track */
        }

        .block-image {
          padding: 0 3px;
          @media(max-width: 991px){
            width: 500px;
          }
          img{
            @media(max-width: 991px){
              padding-bottom: 40px;
            }
          }
        }
      }
    }
  }
  .content-information-general{
    border-top: 1px solid #818181;
    border-bottom: 1px solid #818181;
    padding: 60px 0;
    margin-top: 30px;
    @media(min-width: 992px){
      margin-top: 90px;
    }
    .content-description{
      @media(min-width: 992px){
        padding-left: 75px;
      }
      .title{
        font-family: "Open Sans Regular";
        text-align: center;
        font-size: 25px;
        line-height: 33px;
        margin-top: 40px;
        @media(min-width: 576px){
          font-size: 45px;
          line-height: 47px;
        }
        @media(min-width: 992px){
          margin-top: 0;
          text-align: left;
          font-size: 30px;
          line-height: 38px;
          width: 80%;
        }
        strong{
           font-family: "Open Sans Bold";
          color: #F00000;
        }
      }
      .description{
        font-family: "Open Sans Light";
        font-size: 15px;
        line-height: 30px;
        text-align: center;
        @media(min-width: 576px){
          font-size: 25px;
          line-height: 27px;
        }
        @media(min-width: 992px){
          text-align: left;
          font-size: 15px;
          line-height: 30px;
        }
        p{
          margin-bottom: 5px;
        }
      }
      .content-button{
        margin-top: 50px;
        text-align: center;
        @media(min-width: 992px){
          text-align: left;
        }
        a{
          font-family: "Open Sans Bold";
          font-size: 16px;
          line-height: 15px;
          background:#237EE7;
          color: #FFF;
          text-decoration: none;
          padding: 7px 15px;
          border-radius: 50px;
        }
      }
    }
  }
}
/*================== Pagina Taller  ==================*/