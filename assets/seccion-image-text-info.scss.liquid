.seccion-image-text-info{
  .box-gral {
    border-top: 1px solid #818181;
    border-bottom: 1px solid #818181;
    padding: 60px 0px;
    @media(min-width: 576px) {

    }
    @media(min-width: 992px) {
      padding: 60px 15px;
    }
    .content-image{
      padding: 0;
      @media(min-width: 992px) {
        padding: 0px 15px;
      }
    }
  }
  .content-description-box {
    .content-information-general {
      margin: auto;
      @media(min-width: 992px) {
        width: 90%;
      }
      .content-description {
        @media(min-width: 992px) {
          padding-left: 65px;
        }
        .title {
          font-family: "Open Sans Regular";
          font-size: 35px;
          line-height: 37px;
          color: #000;
          text-align: center;
          margin-top: 50px !important;
          @media(max-width: 991px) {
            margin: auto;
          }
          @media(min-width: 576px) {
            font-size: 45px;
            line-height: 47px;
            width: 500px;
          }
          @media(min-width: 992px) {
            font-size: 30px;
            line-height: 38px;
            text-align: center;
            margin-top: 0 !important;
            width: 500px;
          }
          strong {
            color: $color-red;
            font-family: "Open Sans Bold";
          }
        }
        .description {
          margin-top: 30px;
          font-family: "Open Sans Light";
          font-size: 15px;
          line-height: 17px;
          text-align: center;
          @media(min-width: 576px) {
            font-size: 25px;
            line-height: 27px;
          }
          @media(min-width: 992px) {
            font-size: 15px;
            line-height: 30px;
            text-align: left;
          }
          p {
            @media(min-width: 576px) {
              margin-bottom: 20px;
            }
            @media(min-width: 992px) {
              margin-bottom: 0;
            }
          }
        }
        .content-button {
          margin-top: 70px;
          text-align: center;
          @media(min-width: 992px) {
            text-align: left;
          }

          a {
            font-family: "Open Sans Bold";
            font-size: 16px;
            line-height: 17px;
            text-transform: uppercase;
            text-decoration: none;
            color: #FFF;
            background: #237EE7;
            padding: 8px 20px;
            border-radius: 50px
          }
        }
      }
    }
  }
}