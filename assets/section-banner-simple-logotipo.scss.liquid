$color-red: #F00000;
.section-banner-simple-logotipo{
  .content-slider-box{
    min-height: 860px;
    background-size: cover;
    background-position: center;

    @media(min-width: 768px) {
      min-height: 1733px;
    }
    @media(min-width: 992px) {
      min-height: 700px;
    }
    @media(min-width: 1500px) {
      min-height: 860px;
    }
    .content-box-description{
      padding-top: 320px;
      @media (min-width: 576px){
        padding-top: 195px;
      }
      @media(min-width: 992px){
        padding-top: 195px;
      }
      @media(min-width: 1280px){
        padding-top: 195px;
      }
      .title{
        font-family: "Open Sans Regular";
        color: #FFFFFF;
        font-size: 30px;
        line-height: 30px;
        margin: auto;
        width: 328px;
        @media (min-width: 576px){
          font-size: 55px;
          line-height: 55px;
          width: 520px;
        }
        @media(min-width: 768px){
          width: 590px;
        }
        @media(min-width: 992px){
          font-size: 45px;
          line-height: 45px;
          width: auto;
        }
        @media(min-width: 1280px){
          font-size: 55px;
          line-height: 55px;
        }
      }
      .subtitle{
        font-family: 'Open Sans Extra Bold';
        color: #FFF;
        margin: auto;
        font-size: 30px;
        line-height: 30px;
        margin: auto;
        width: 358px;
        @media (min-width: 576px){
          font-size: 55px;
          line-height: 55px;
          width: 520px;
        }
        @media(min-width: 768px){
          width: 665px;
        }
        @media(min-width: 992px){
          font-size: 45px;
          line-height: 45px;
          width: auto;
        }
        @media(min-width: 1280px){
          font-size: 55px;
          line-height: 55px;
          width: 995px;
        }
        span{
          color: $color-red;
          @media(min-width: 992px){
            color: #FFFFFF;
          }
        }
      }
    }
  }
}
