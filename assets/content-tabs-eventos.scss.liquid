$color-red: #F00000;
.content-tabs-eventos{
  padding: 80px 15px;
  .nav-tabs{
    border: none;
     @media(max-width: 576px){
         display: flex;
    align-items: center;}
    .nav-item{
      button{
        text-transform: uppercase;
        font-size: 20px;
        line-height: 10px;
        font-family: "Open Sans Bold";
        color: #000;
        text-decoration: none;
        border: 1px solid #000;
        border-radius: 50px;
        padding: 10px;
        margin-bottom: 25px !important;
        @media(min-width: 576px){
          font-size: 20px;
          line-height: 29px;
          margin-bottom: 0 !important;
          padding: 5px 20px;
        }
        @media(min-width: 992px){
          font-size: 23px;
          line-height: 33px;
        }
        &.active{
          background: $color-red;
          color: #FFF;
          border: 1px solid $color-red;
        }
      }
    }
  }
  .tab-content{
    margin-top: 20px;
    .tab-pane{
      .eventos-slider{
        .slick-arrow{
          &.slick-prev {
            background: url({{ "left-arrow-small.png" | asset_url}});
            width: 12px;
            height: 23px;
            &:before{
              content: none;
            }
          }
          &.slick-next {
            background: url({{ "right-arrow-small.png" | asset_url}});
            width: 12px;
            height: 23px;
            &:before{
              content: none;
            }
          }
        }
        .box-eventos-description{
          margin: auto;
          @media(max-width: 991px){
            background: #000;
          }
          @media(min-width: 992px){
            width: 90%;
          }
          .content-description{
            padding-left: 30px;
            text-align: center;
            @media(min-width: 576px){
            }
            @media(min-width: 992px){
              text-align: justify;
            }
            .title{
              font-family: "Open Sans Bold";
              font-size: 35px;
              line-height: 35px;
              text-transform: uppercase;
              color: #FFFFFF;
              @media(min-width: 576px){
                font-size: 45px;
                line-height: 34px;
              }
              @media(min-width: 992px){
                font-size: 25px;
                line-height: 19px;
                color: #000;
              }
            }
            .subtitle{
              text-transform: uppercase;
              font-family: "Open Sans Light";
              font-size: 21px;
              line-height: 23px;
              margin-top: 10px;
              color: #FFFFFF;
              @media(min-width: 576px){
                font-size: 31px;
                line-height: 33px;
              }
              @media(min-width: 992px){
                font-size: 18px;
                line-height: 19px;
                color: #707070;
              }
            }
            .description{
              font-family: "Open Sans Regular";
              @media(max-width: 991px){
                margin: auto;
              }
              @media(min-width: 576px){
                width: 470px;
              }
              @media(min-width: 992px){
                width: 470px;
              }
              p{
                color: #FFF;
                font-size: 15px;
                line-height: 17px;
                @media(min-width: 576px){
                  font-size: 25px;
                  line-height: 27px;
                }
                @media(min-width: 992px){
                  color: #000;
                  font-size: 13px;
                  line-height: 18px;
                }
                strong{
                  font-family: "Open Sans Bold";
                  font-size: 15px;
                  line-height: 17px;
                  @media(min-width: 576px){
                    font-size: 25px;
                    line-height: 27px;
                  }
                  @media(min-width: 992px){
                    font-size: 13px;
                    line-height: 12px;
                  }
                }
                a{
                  font-family: "Open Sans Bold";
                  font-size: 15px;
                  line-height: 12px;
                  text-decoration: none;
                  border-bottom: 1px solid $color-red;
                  color: $color-red;
                  text-transform: uppercase;
                  @media(min-width: 576px){
                    font-size: 25px;
                    line-height: 12px;
                  }
                  @media(min-width: 992px){
                    font-size: 13px;
                    line-height: 12px;
                  }
                }
              }
            }
            .price{
              font-family: "Open Sans Extra Bold";
              font-size: 20px;
              line-height: 27px;
              color: #000000;
              margin-top: 20px;
              @media(min-width: 576px){
                font-size: 30px;
                line-height: 37px;
              }
              @media(min-width: 992px){
                font-size: 20px;
                line-height: 27px;
              }
            }
            .content-button{
              margin-bottom: 50px;
              @media(min-width: 576px){
                margin-bottom: 75px;
              }
              @media(min-width: 992px){
                margin-bottom: 0;
              }
              a{
                font-family: "Open Sans Bold";
                color: #FFF;
                font-size: 13px;
                line-height: 12px;
                transition: all 0.5s;
                padding: 5px 15px;
                text-decoration: none;
                text-transform: uppercase;
                border-radius: 50px;
                border: 1px solid #FFF;
                @media(min-width: 576px){
                  font-size: 23px;
                  line-height: 12px;
                }
                @media(min-width: 992px){
                  border: none;
                  background: $color-red;
                  border-radius: 0;
                  font-size: 13px;
                  line-height: 12px;
                }
                &:hover{
                  background: #000;
                }
              }
            }
          }
        }
      }
    }
  }
}
