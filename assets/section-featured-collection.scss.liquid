$color-red: #F00000;
/*================== DLG products home ==================*/
.index-section-featured-collection{
  padding: 50px 0;
  @media(min-width: 576px){
    padding: 90px 0;
  }
  @media(min-width: 992px){
    padding: 90px 0;
  }
  .product__policies{
    display: none !important;
  }
  .slick-arrow{
    top: 28%;
    &.slick-next{
      right: -15px;
      background: url({{"right-arrow-2.png" | asset_url }});
      width: 12px;
      height: 23px;
      @media (min-width: 992px) {
        right: -40px;
      }
      &:before{
        content: none !important;
      }
    }
    &.slick-prev{
      left: -4px;
      z-index: 9;
      background: url({{"left-arrow-2.png" | asset_url }});
      width: 12px;
      height: 23px;
      @media (min-width: 992px) {
        left: -40px;
      }
      &:before{
        content: none !important;
      }
    }
  }
  .section-header__title{
    font-family: 'Open Sans Light Italic';
    font-size: 27px;
    line-height: 32px;
    color: #000;
    text-transform: uppercase;
    margin-bottom: 50px;
    @media(min-width: 576px){
      font-size: 40px;
      line-height: 42px;
      margin-bottom: 90px;
    }
    @media(min-width: 992px){
      font-size: 30px;
      line-height: 18px;
      margin-bottom: 90px;
    }
    strong{
      font-family: 'Open Sans Bold';
      color: $color-red;
      letter-spacing: -1px;
    }
  }
  .image-wrap{
    border: 1px solid rgba(112,112,112, 0.2);
    padding: 10px;
    button{
      border: 1px solid #000;
      padding: 4px 6px;
      border-radius: 60px;
      &.active{
        svg{
          fill: $color-red !important;
          stroke: $color-red !important;
        }
      }
    }
  }
  .grid-product__colors{
    display: none;
  }
  .product-single__title{
    font-family: 'Open Sans Semibold';
    font-size: 15px;
    line-height: 20px;
    color: #000;
    text-align: center;
    text-transform: uppercase;
    margin: 13px 0;
    min-height: 40px;
    @media(min-width: 768px){
      font-size: 15px;
      line-height: 20px;
      min-height: 40px;
    }
    @media(min-width: 992px){
      font-size: 15px;
      line-height: 20px;
      min-height: 60px;
    }
    @media(min-width: 1500px){
      min-height: 40px;
    }
    a{
      text-decoration: none;
      color: #000;
    }
  }
  .product__price{
    font-family: 'Open Sans Extra Bold';
    font-size: 16px;
    line-height: 20px;
    color: $color-red;
    @media(min-width: 576px){
      font-size: 20px;
      line-height: 27px;
    }
    @media(min-width: 992px){
      font-size: 20px;
      line-height: 27px;
    }
  }
  .product-single__form{
    margin-bottom: 0px;
  }
  .add-to-cart{
    font-family: 'Open Sans Bold';
    background: #FFF;
    border: 1px solid #000;
    color: #000;
    border-radius: 0px;
    letter-spacing: 0;
    font-size: 11px;
    line-height: 15px;
    transition: all 0.5s;
    padding: 10px;
    margin-top: 20px;
    @media(min-width: 576px){
      font-size: 14px;
      line-height: 24px;
    }
    @media(min-width: 992px){
      font-size: 13px;
      line-height: 15px;
    }
    @media(min-width: 1500px){
      font-size: 15px;
      line-height: 8px;
    }
    &:hover{
      background: $color-red;
      color: #FFF;
      border: 1px solid #FFF;
    }
  }
  .shopify-payment-button{
    display: none;
  }
  .slick-track {
    display: flex;
  }
  .slick-track .slick-slide {
    display: flex;
    height: auto;
  }
  .content-image-box {
    /*height: 45%;*/
    @media(min-width: 992px){
      height: auto;
    }
  }
